# ============================================================================
# Harezmi Intelligence - Environment Configuration (Development)
# ============================================================================
# Copy this file to .env and fill in the values for your environment
# NEVER commit the actual .env file to version control!

# ============================================================================
# Project Configuration
# ============================================================================
PROJECT_NAME=Harezmi Intelligence
API_V1_STR=/api/v1
VERSION=1.0.0

# ============================================================================
# Environment
# ============================================================================
ENV=development
DEBUG=true

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# Database Configuration (PostgreSQL + PostGIS + pgvector)
# ============================================================================
# Async PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://harezmi:harezmi_dev_password@localhost:5432/harezmi_dev

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Individual database connection components (for reference)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=harezmi_dev
DB_USER=harezmi
DB_PASSWORD=harezmi_dev_password

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# External Services & API Keys
# ============================================================================
# Groq API for LLM services
GROQ_API_KEY=your-groq-api-key-here

# Other external services (optional)
# GEO_SERVICE_API_KEY=your_api_key
# SEARCH_ENGINE_API_KEY=your_api_key
# BOOKING_SERVICE_URL=https://api.booking.service

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_CACHE=true
ENABLE_VECTOR_SEARCH=true
ENABLE_GEOSPATIAL_QUERIES=true

# ============================================================================
# Dashboard Configuration (Streamlit)
# ============================================================================
DASHBOARD_PORT=8501
DASHBOARD_LOGGER_LEVEL=info
